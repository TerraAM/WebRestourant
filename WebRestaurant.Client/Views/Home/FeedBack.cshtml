@model WebRestaurant.Shared.Dtos.FeedBackDto

@{
    ViewData["Title"] = "Create";
    ViewBag.Title = "Связь с нами";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-12">
        <h2 class="contact-title">Get in Touch</h2>
    </div>
    <div class="col-lg-8">
        <form asp-action="FeedBack" class="form-contact contact_form" method="post" id="contactForm" novalidate="novalidate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-12">
                    <div class="form-group">
                        <textarea asp-for="Context" class="form-control w-100" id="message" cols="30" rows="9" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Enter Message'" placeholder=" Enter Message"></textarea>
                    </div>
                </div>
                <div class="col-sm-12">
                    <div class="form-group">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <input asp-for="Email" class="form-control valid" id="email" type="email" value="@User.Identity.Name" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Enter email address'" placeholder="Email">
                        } else
                        {
                            <input asp-for="Email" class="form-control valid" id="email" type="email" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Enter email address'" placeholder="Email">
                        }
                    </div>
                </div>
                <div class="col-12">
                    <div class="form-group">
                        <input asp-for="Title" class="form-control" id="subject" type="text" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Enter Subject'" placeholder="Enter Subject">
                    </div>
                </div>

                <input type="hidden" asp-for="CreateTime" value="@DateTime.Now" class="form-control" />

            </div>
            <div class="form-group mt-3">
                <button type="submit" class="button button-contactForm boxed-btn">Отправить</button>
            </div>
        </form>
    </div>
    <div class="col-lg-3 offset-lg-1">
        <div class="media contact-info">
            <span class="contact-info__icon"><i class="ti-home"></i></span>
            <div class="media-body">
                <h3>Buttonwood, California.</h3>
                <p>Rosemead, CA 91770</p>
            </div>
        </div>
        <div class="media contact-info">
            <span class="contact-info__icon"><i class="ti-tablet"></i></span>
            <div class="media-body">
                <h3>+1 253 565 2365</h3>
                <p>Mon to Fri 9am to 6pm</p>
            </div>
        </div>
        <div class="media contact-info">
            <span class="contact-info__icon"><i class="ti-email"></i></span>
            <div class="media-body">
                <h3>support@colorlib.com</h3>
                <p>Send us your query anytime!</p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
