@model WebRestaurant.Shared.Dtos.DishDto

@{
    ViewData["Title"] = "Детали";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="whole-wrap">
		<div class="container box_1170">
			<div class="section-top-border">
				<h3 class="mb-30">@Model.Name</h3>
				<div class="row">
					<div class="col-md-3">
						<img src="@Model.PhotoPath" alt="" class="img-fluid">
					</div>
					<div class="col-md-9 mt-sm-20">
						<p>@Model.Description</p>
					</div>
				</div>
			</div>
			<div>          
				<span style="display: block;
    font-weight: 400;
    font-size: 26px;
    color: #DB9A64;">@Model.Price руб.</span><br>
				Кол-во: 
				<input type="number" class="quantity-input" min="1" value="1" max="10">
				<button class="btn btn-success add-to-cart-button" data-product-id="@Model.Id">Выбрать</button> <br>
			</div>

		</div>
	</div>
	<!-- End Align Area -->
<div>
	@if (User.IsInRole("admin"))
	{ 
		<a asp-action="Edit" asp-route-id="@Model.Id">Изменить</a> <text>|</text>
	}
    <a asp-action="Index">К списку</a>
</div>
