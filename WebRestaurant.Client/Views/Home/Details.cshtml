@model WebRestaurant.Shared.Model.DishModel

@{
    ViewData["Title"] = "Детали";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="whole-wrap">
		<div class="container box_1170">
			<div class="section-top-border">
                <h3 class="mb-30">@Model.Dish.Name</h3>
				<div class="row">
					<div class="col-md-3">
                        <img src="@Model.Dish.PhotoPath" alt="" class="img-fluid">
					</div>
					<div class="col-md-9 mt-sm-20">
                        <p>@Model.Dish.Description</p>
					</div>
				</div>
			</div>
			<div>          
				<span style="display: block;
    font-weight: 400;
    font-size: 26px;
    color: #DB9A64;">@Model.Dish.Price руб.</span><br>
				Кол-во: 
				<input type="number" class="quantity-input" min="1" value="1" max="10">
                <button class="btn btn-success add-to-cart-button" data-product-id="@Model.Dish.Id">Выбрать</button> <br>
			</div>

		</div>
	</div>
	<!-- End Align Area -->
<div>
	@if (User.IsInRole("admin"))
	{ 
        <a asp-action="Edit" asp-route-id="@Model.Dish.Id">Изменить</a> <text>|</text>
	}
    <a asp-action="Index">К списку</a>
    <div class="comments">
        <h3>Комментарии</h3>
        @if (Model.Comments.Any())
        {
            foreach (var comment in Model.Comments)
            {
                <div class="comment">
                    <div class="comment-author">@comment.User.Name</div>
                    <div class="comment-date">@comment.CreatedDate</div>
                    <div class="comment-text">@comment.Content</div>
                </div>
            }
        }
        else
        {
            <span>Нет комментариев</span>
        }
    </div>
    @if (User.Identity.IsAuthenticated)
    {
        <div class="comment-form">
            <h3>Оставить комментарий</h3>
            <form asp-action="Details">
                <input name="AuthorEmail" value="@User.Identity.Name" hidden class="form-control" />
                <input name="DishId" value="@Model.Dish.Id" hidden class="form-control" />
                <div class="form-group">
                    <label for="comment">Комментарий</label>
                    <textarea name="Text" class="form-control" id="comment" rows="3" placeholder="Введите ваш комментарий"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Отправить</button>
            </form>
        </div>
    }
</div>
